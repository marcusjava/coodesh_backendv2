  "paths": {
    "/api/users": {
      "post": {
        "description": "Create a new User",
        "tags": ["Users"],
        "operationId": "createUser",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "The user has been created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserCreatedResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Invalid parameters",
                  "code": "400",
                  "error": "Bad Request"
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Conflict",
                  "code": "409",
                  "error": "Conflict"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/authenticate": {
      "post": {
        "description": "Authenticate the user on the API generating a JWT token",
        "operationId": "authenticateUser",
        "tags": ["Users"],
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserAuth"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "The user has been authenticate and the JWT returned",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticatedUserResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "User unauthorized",
                  "code": "401",
                  "error": "Unauthorized"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/me": {
      "get": {
        "security": [{ "apiKey": [] }],
        "description": "Get the profile of the token's owner",
        "tags": ["Users"],
        "operationId": "getUserProfile",
        "responses": {
          "200": {
            "description": "The user information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfileResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "User not found",
                  "code": "404",
                  "error": "Not Found"
                }
              }
            }
          }
        }
      }
    },
    "/api/articles": {
      "post": {
        "description": "Create a new Article belonging to the authenticated user",
        "operationId": "createArticle",
        "tags": ["Article"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Article"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Article has been created!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleCreatedResponse"
                }
              }
            }
          },
          "400": {
            "description": "Error validating article data.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Error validating article data",
                  "code": "400",
                  "error": "Bad Request"
                }
              }
            }
          }
        }
      },
      "get": {
        "description": "Get Articles",
        "operationId": "getArticles",
        "tags": ["Article"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Pagination parameter.",
            "required": true,
            "schema": {
              "type": "integer",
              "default": "1",
              "enum": ["1", "2", "3", "4", "5"]
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Pagination Limit for items displayed",
            "required": true,
            "schema": {
              "type": "integer",
              "default": "10",
              "enum": ["10", "20", "30"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Articles",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticlesResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Something went wrong",
                  "code": "400",
                  "error": "Not Found"
                }
              }
            }
          }
        }
      }
    },
    "/api/articles/{id}": {
      "get": {
        "tags": ["Article"],
        "operationId": "article-by-id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Article mongo ID.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Article",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Article not found",
                  "code": "404",
                  "error": "Not Found"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Article"],
        "operationId": "articles-list",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Article mongo ID.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Articles",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Article"],
        "operationId": "article-update",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Article mongo ID.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Update Article",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateArticle"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Articles",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "User not found",
                  "code": "404",
                  "error": "Not Found"
                }
              }
            }
          }
        }
      }
    }
  },
